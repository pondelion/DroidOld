<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background7"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalculatorActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/fukidashi011"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:gravity="center"
                android:textColor="#990099"
                android:textSize="30dp" />

            <ImageButton
                android:id="@+id/eraseBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/bomb030"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/separator2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
           android:layout_weight="4" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="30dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:textSize="16dp" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/taxBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:background="@null"
                android:src="@drawable/tax" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_weight="3" />

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/arrow1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/numberOneBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/number_1" />

            <ImageButton
                android:id="@+id/numberTwoBtn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/number_2" />

            <ImageButton
                android:id="@+id/numberThreeBtn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/number_3" />

            <ImageButton
                android:id="@+id/plusBtn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/plus1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

        	<ImageButton
        	    android:id="@+id/numberFourBtn"
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:background="@null"
        	    android:padding="10dp"
        	    android:scaleType="fitXY"
        	    android:src="@drawable/number_4" />

        	<ImageButton
        	    android:id="@+id/numberFiveBtn"
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:background="@null"
        	    android:padding="10dp"
        	    android:scaleType="fitXY"
        	    android:src="@drawable/number_5" />

        	<ImageButton
        	    android:id="@+id/numberSixBtn"
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:background="@null"
        	    android:padding="10dp"
        	    android:scaleType="fitXY"
        	    android:src="@drawable/number_6" />

        	<ImageButton
        	    android:id="@+id/minusBtn"
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:background="@null"
        	    android:scaleType="centerInside"
        	    android:src="@drawable/minus2" />

        </LinearLayout>
        
        

    	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1" >

    		<ImageButton
    		    android:id="@+id/numberSevenBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="fitXY"
    		    android:src="@drawable/number_7" />

    		<ImageButton
    		    android:id="@+id/numberEightBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="fitXY"
    		    android:src="@drawable/number_8" />

    		<ImageButton
    		    android:id="@+id/numberNineBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="fitXY"
    		    android:src="@drawable/number_9" />

    		<ImageButton
    		    android:id="@+id/multipleBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="fitXY"
    		    android:src="@drawable/multiple1" />

        </LinearLayout>
        
    	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1" >

    		<ImageButton
    		    android:id="@+id/numberZeroBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="fitXY"
    		    android:src="@drawable/number_0" />

    		<ImageButton
    		    android:id="@+id/lkakkoBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:scaleType="centerInside"
    		    android:padding="10dip"
    		   
    		    android:src="@drawable/lkakko1" />

    		<ImageButton
    		    android:id="@+id/rkakkoBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="centerInside"
    		    android:src="@drawable/rkakko1" />

    		<ImageButton
    		    android:id="@+id/divideBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="fitXY"
    		    android:src="@drawable/divide1" />

        </LinearLayout>

    	<LinearLayout
    	    android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:orientation="horizontal"
        	android:layout_weight="1" >

    		<ImageButton
    		    android:id="@+id/decimalBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="centerInside"
    		    android:src="@drawable/decimal_point1" />

    		<ImageButton
    		    android:id="@+id/sqrtBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="fitXY"
    		    android:src="@drawable/sqrt1" />

    		<ImageButton
    		    android:id="@+id/powerBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="fitXY"
    		    android:src="@drawable/pow2" />

    		<ImageButton
    		    android:id="@+id/equalBtn"
    		    android:layout_width="0dp"
    		    android:layout_height="match_parent"
    		    android:layout_weight="1"
    		    android:background="@null"
    		    android:padding="10dp"
    		    android:scaleType="centerInside"
    		    android:src="@drawable/equal1" />

    	</LinearLayout>

    </LinearLayout>

    

</LinearLayout>
